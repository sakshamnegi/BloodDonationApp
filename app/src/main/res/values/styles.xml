<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="yef_app_1" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:textColorPrimary">?android:attr/colorBackground</item>
    </style>
    
    <style name="EditTextFields">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:backgroundTint">#BCAAA4</item>

    </style>
</resources>
